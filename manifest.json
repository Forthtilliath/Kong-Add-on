{
	"manifest_version": 2,
	"name": "Kongregate update",
	"version": "1.3.7.3",
	"author": "Forth",

	"description": "This add-on works only on www.kongregate.com !",
	"icons": {
		"16": "icons/icon_16.png",
		"48": "icons/icon_48.png",
		"128": "icons/icon_128.png"
	},
	"content_scripts": [
		{
			"matches": [
				"*://www.kongregate.com/",
				"*://*.kongregate.com/games/*",
				"*://*.kongregate.com/accounts/*",
				"*://www.kongregate.com/findyourfriends" ],
			"run_at": "document_end",
			"js": [
				"js/jquery-3.5.1.min.js",
				"js/jquery-cssrule.js",
				"js/jcssrule.js",
				"js/jquery.cookie.js",
				"js/content_css.js",
				"js/fontawesome.js",
				"js/fontawesome-solid.js"
			]
		},
		{
			"matches": [
				"*://www.kongregate.com/",
				"*://*.kongregate.com/games/*",
				"*://*.kongregate.com/accounts/*",
				"*://www.kongregate.com/findyourfriends" ],
			"js": [ "js/content.js" ]
		}
	],
	"web_accessible_resources": [
		"webfonts/*"
	],

	"permissions": [ "activeTab" ]
}
